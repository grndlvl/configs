# add color to grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'

# some more ls aliases
alias ls='ls --color'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# more effective clear
alias clear='clear && clear'

# Directory traversal aliases.
alias .='pwd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias cd..='cd ..'


